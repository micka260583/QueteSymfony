{% extends 'base.html.twig' %}

{% block title %} Nouvelle catégorie {% endblock %}

{% block body %}
    <div class="container">
        <h1 class="text-center mt-5 mb-5 text-uppercase">AJOUTER UNE CATÉGORIE</h1>
        {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
            <div class="mb-3 text-center">NAME</div>
            <div class="text-end">{{ form_errors(form.name) }}</div>
            <div class="mb-3">{{ form_widget(form.name) }}</div>
            <div class="d-flex justify-content-center"><button class="btn btn-dark mt-3" type='submit'>Ajouter une catégorie</button></div>
        {{ form_end(form) }}
    </div>
{% endblock %}